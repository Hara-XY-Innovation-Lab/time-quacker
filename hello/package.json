{
  "name": "time-quacker",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "om.namah.gestureautomation",
    "win": {
      "target": "nsis"
    },
    "files": [
        "main.js",
        "preload.js",
        "renderer/**/*",
        "Assets/**/*"
      ]

  },
  "keywords": [
    "gesture",
    "automation",
    "time",
    "quacker",
    "electron"
  ],
  "author": "Shiv Patil",
  "license": "ISC",
  "description": "A desktop app that uses hand gestures to announce the time and automate actions.",
  "devDependencies": {
    "electron": "36.5.0",
    "electron-builder": "26.0.17"
  }
}